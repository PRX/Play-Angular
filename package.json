{
  "name": "play.prx.org",
  "version": "0.1.0",
  "description": "PRX embed audio player",
  "keywords": [
    "PRX",
    "Play"
  ],
  "homepage": "http://play.prx.org",
  "bugs": "https://github.com/PRX/play.prx.org/issues",
  "license": "MIT",
  "author": "PRX, Inc. <help@prx.org> (http://www.prx.org)",
  "contributors": [
    "Chris Kalafarski <chris.kalafarski@prx.org>",
    "Chris Rhoden <chris@prx.org>"
  ],
  "repository": "https://github.com/PRX/play.prx.org.git",
  "scripts": {
    "clean": "rm -Rf ./.ci ./.dev ./.dist ./jspm_packages ./node_modules ./typings",
    "jspm:bundle": "if [ $NODE_ENV = 'development' ]; then npm run jspm:bundle:dev; else npm run jspm:bundle:dist; fi",
    "jspm:bundle:dev": "jspm bundle src/app/main - [src/app/**/*] - [src/lib/**/*] - [src/javascript/**/*] ./.dev/vendor.js --inject",
    "jspm:bundle:dist": "jspm bundle-sfx src/app/main ./.dist/embed.min.js --inject --minify --no-mangle",
    "jspm:install": "jspm install",
    "npm:cache:clean": "npm cache clean",
    "postinstall": "if [ $NODE_ENV = 'development' ]; then npm run postinstall:dev; else npm run postinstall:dist; fi",
    "postinstall:dev": "npm run jspm:install && npm run typings:install",
    "postinstall:dist": "npm run jspm:bundle && npm run npm:cache:clean",
    "prestart:dev": "npm run jspm:bundle",
    "prestart:dist": "",
    "start": "if [ $NODE_ENV = 'development' ]; then npm run start:dev; else npm run start:dist; fi",
    "start:dev": "node ./server/dev.js",
    "start:dist": "node ./server/dist.js",
    "start:test": "",
    "test": "echo SKIP TEST",
    "xtest": "if [ $NODE_ENV = 'development' ]; then npm run test:dev; else npm run test:ci; fi",
    "test:ci": "karma start ./config/karma.ci.js --log-level debug --single-run",
    "test:dev": "karma start ./config/karma.dev.js --log-level debug --single-run",
    "typings:install": "typings install"
  },
  "dependencies": {
    "express": "^4.13.4",
    "jasmine-core": "^2.4.1",
    "jspm": "^0.16.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jspm": "^2.1.0",
    "karma-phantomjs-launcher": "1.0.0",
    "karma-spec-reporter": "0.0.26",
    "phantomjs-prebuilt": "^2.1.7",
    "pug": "^2.0.0-alpha7",
    "typescript": "^1.8.9",
    "typings": "^0.7.3"
  },
  "devDependencies": {},
  "engines": {
    "node": "^6.0.0"
  },
  "jspm": {
    "configFile": "config/systemjs.config.js",
    "dependencies": {
      "angular2": "npm:angular2@^2.0.0-beta.17",
      "es6-shim": "github:es-shims/es6-shim@^0.35.0",
      "plugin-typescript": "github:frankwallis/plugin-typescript@^4.0.10",
      "reflect-metadata": "npm:reflect-metadata@^0.1.3",
      "rxjs": "npm:rxjs@^5.0.0-beta.7",
      "ts": "github:frankwallis/plugin-typescript@^4.0.10",
      "zone.js": "npm:zone.js@^0.6.12"
    },
    "devDependencies": {
      "typescript": "npm:typescript@^1.6.2"
    }
  }
}
